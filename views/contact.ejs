<head>
  <title>Contact</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
  />
  <link rel="stylesheet" href="/styles/main.css" />
</head>

<%- include("partials/header") %>

<main class="container mt-5">
  <h1 class="mb-4 text-center">Contact Me</h1>

  <div class="row">
    <div class="col-lg-6 mb-4">
      <form action="/contact" method="POST" class="bg-light p-4 rounded shadow-sm">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" id="name" name="name" required />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" id="email" name="email" required />
        </div>
        <div class="mb-3">
          <label for="message" class="form-label">Message</label>
          <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary w-100">Send Message</button>
      </form>
    </div>

    <div class="col-lg-6 d-flex flex-column align-items-center justify-content-center">
      <h5 class="mb-3">Connect with me</h5>
      <div class="d-flex gap-3 fs-3">
        <a href="https://twitter.com/yourusername" target="_blank" class="text-dark">
          <i class="fab fa-twitter"></i>
        </a>
        <a href="https://github.com/yourusername" target="_blank" class="text-dark">
          <i class="fab fa-github"></i>
        </a>
        <a href="https://linkedin.com/in/yourusername" target="_blank" class="text-dark">
          <i class="fab fa-linkedin"></i>
        </a>
        <a href="mailto:youremail@example.com" class="text-dark">
          <i class="fas fa-envelope"></i>
        </a>
      </div>
    </div>
  </div>
</main>