<%- include("partials/header") %>

<main class="container mt-5">
  <div class="row align-items-start text-center text-lg-start">
  <!-- Left: Title -->
  <div class="col-lg-3 mb-4 d-flex align-items-start justify-content-center justify-content-lg-start">
    <h2 class="contact-title">Contact Me</h2>
  </div>

  <!-- Center: Form -->
  <div class="col-lg-6 mb-4">
    <form action="https://formspree.io/f/xrbkqbzp" method="POST" class="bg-light p-4 rounded shadow-sm">
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" required />
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" required />
      </div>
      <div class="mb-3">
        <label for="message" class="form-label">Message</label>
        <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
      </div>
      <button type="submit" class="btn btn-primary w-100">Send Message</button>
    </form>
  </div>

  <!-- Right: Connect -->
  <div class="col-lg-3 d-flex flex-column align-items-center align-items-lg-start justify-content-start">
    <h5 class="mb-3">Connect with me</h5>
    <div class="d-flex gap-3 fs-3">
      <a href="https://instagram.com/robcarney.dev"  target="_blank" class="text-dark">
        <i class="fab fa-instagram"></i>
      </a>
      <a href="https://github.com/robc2111" target="_blank" class="text-dark">
        <i class="fab fa-github"></i>
      </a>
      <a href="https://facebook.com/profile.php?id=61576983782158" target="_blank" class="text-dark">
        <i class="fab fa-facebook"></i>
      </a>
      <a href="https://linkedin.com/in/robert-carney-783933196/" target="_blank" class="text-dark">
        <i class="fab fa-linkedin"></i>
      </a>
      <a href="mailto:rob.carney1@outlook.com" class="text-dark">
        <i class="fas fa-envelope"></i>
      </a>
    </div>
  </div>
</div>
</main>